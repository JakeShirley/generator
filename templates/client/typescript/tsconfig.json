{
  "lib": [ "ES2015" ],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "strict": true,
    "sourceMap": true,
    "outDir": "build",
    "declarationDir": "build",
    "declaration": true,
    "resolveJsonModule": true
  },
  "typedocOptions": {
    "name": "generated client",
    "entryPoints": [
      "./src/index.ts"
    ],
    "out": "docs",
    "readme": "./README.md",
    "exclude": [
      "node_modules",
      "docs",
      "build",
      "jest.config.js",
      "src/*.test.ts",
      "src/**/*.test.ts"
    ]
  }
}
